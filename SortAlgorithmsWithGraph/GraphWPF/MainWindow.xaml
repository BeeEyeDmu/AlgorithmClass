<Window x:Class="GraphWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="724.832">
    <Grid Margin="0,0,-8,0">
        <TextBox x:Name="txtNo" HorizontalAlignment="Left" Height="23" Margin="53,51,0,0" TextWrapping="Wrap" 
                 Text="100" 
                 HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnRandom" Content="랜덤생성" HorizontalAlignment="Left" Margin="220,51,0,0" VerticalAlignment="Top" Width="75"
                Click="RandomClick"/>
        <Button x:Name="btnBubble" Content="버블정렬" HorizontalAlignment="Left" Margin="53,106,0,0" VerticalAlignment="Top" Width="75" 
                Click="BubbleClick"/>
        <Button x:Name="btnQuick" Content="퀵정렬" HorizontalAlignment="Left" Margin="152,106,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnShell" Content="쉘정렬" HorizontalAlignment="Left" Margin="255,106,0,0" VerticalAlignment="Top" Width="75"/>
        <Canvas x:Name="canvas1"  Background="AntiqueWhite" HorizontalAlignment="Left" Height="223" Margin="53,160,0,0" VerticalAlignment="Top" Width="604"/>

    </Grid>
</Window>
